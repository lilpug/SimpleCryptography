<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <Title>SimpleCryptography</Title>
        <Authors>David Whitehead</Authors>
        <Description>SimpleCryptography is a library designed to make using encryption and message authentication services nice and simple.</Description>
        <Copyright>MIT</Copyright>
        <PackageProjectUrl>https://github.com/lilpug/SimpleCryptography</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/lilpug/SimpleCryptography/blob/main/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/lilpug/SimpleCryptography</RepositoryUrl>
        <RepositoryType>Git</RepositoryType>
        <PackageTags>rsa;aes;aes-cbc;aes-gcm;cbc;gcm;encryption;decryption;authentication;hashing</PackageTags>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="5.0.0" />
    </ItemGroup>

</Project>